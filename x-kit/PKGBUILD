# Maintainer: Mark Pustjens <pustjens@dds.nl>
# Contributor: Michal Kowalski <kowalski.michal@gmail.com>

pkgname=x-kit
pkgver=0.4.2.2
pkgrel=3
pkgdesc="A simple, transparent and easy to extend xorg parser."
url="http://launchpad.net/xorgparser"
arch=('any')
license=('GPL')
source=("http://launchpad.net/xorgparser/trunk/0.4.2/+download/${pkgname}-${pkgver}.tar.gz")
depends=('python2')
makedepends=('python2')
groups=('ypb')

build() {
	cd ${srcdir}/xorgparser
	python2 setup.py build --build-base=${srcdir}/x-kit-build/build
}

package () {
	cd ${srcdir}/x-kit-build
	python2 ${srcdir}/xorgparser/setup.py install --root=${pkgdir} --skip-build
}

md5sums=('8ea51640362d13d304b405aba0b49275')
