#!/bin/bash

# general config
. /etc/rc.conf
. /etc/rc.d/functions

kname=@NAME@
kpath=@PREFIX@/sbin

PID=`pidof -o %PPID $kpath/krb5kdc`

case "$1" in
    start)
        stat_busy "Starting $kname kdc server"
        if [ -z "$PID" ]; then
            $kpath/krb5kdc
        fi
        if [ ! -z "$PID" -o $? -gt 0 ]; then
            stat_fail
        else
            add_daemon $kname-kdc
            stat_done
        fi
        ;;
    stop)
        stat_busy "Stopping $kname kdc server"
        [ ! -z "$PID" ] && kill $PID &> /dev/null
        if [ $? -gt 0 ]; then
            stat_fail
        else
            rm_daemon $kname-kdc
            stat_done
        fi
        ;;
    restart)
        $0 stop
        sleep 1
        $0 start
        ;;
    *)
        echo "usage: $0 {start|stop|restart}"
	;;
esac

exit 0
