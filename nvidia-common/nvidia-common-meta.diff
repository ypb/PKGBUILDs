+  print(pkg.name('') == "nvidia-256")
+  print(not pkg.name("176xx") == "nvidia-96")
+  print(pkg.name("96") == "nvidia-96")
+  print(pkg.alias2eqc("current") == 256)
+  print(module("nvidia").name(256) == "nvidia_current")
