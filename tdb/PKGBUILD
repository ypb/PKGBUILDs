pkgname=tdb
pkgver=1.2.9
pkgrel=0
pkgdesc="A Trivial Database, GDBM/BDB-like, but for simultaneous writers and transactions"
arch=(i686 x86_64)
license=('LGPL3')
groups=('ypb' 'extra-ypb')
url="http://tdb.samba.org/"
source=(http://samba.org/ftp/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('4d97d18bbe9040038d4e003495bb8cd1')
makedepends=('python2' 'libxslt' 'docbook-xsl')
optdepends=('python2: for python bindings')
options=()

build() {
   cd ${srcdir}/${pkgname}-${pkgver}
   #sed -i 's#python2\.6\([^ ]*\)#python2.7\1 python2.6\1#' configure
   # Use system docbook.xsl
   #_manstyle="/usr/share/xml/docbook/xsl-stylesheets-1.75.2/manpages/docbook.xsl"
   #sed -i "s#http.*xsl#$_manstyle#" tdb.mk

   PYTHON_CONFIG=/usr/bin/python2-config \
	 PYTHON=/usr/bin/python2 \
	 XSLTPROC="xsltproc --nonet --catalogs" \
	 ./configure --prefix=/usr \
               --localstatedir=/var \
               --sysconfdir=/etc/samba
   make
}

package() {
   cd ${srcdir}/${pkgname}-${pkgver}

   make DESTDIR=$pkgdir/ install
}
