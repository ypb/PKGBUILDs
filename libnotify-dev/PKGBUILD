# Maintainer: Adam Hani Schakaki (krzd) <krzd@krzd.net>

pkgname=libnotify-dev
pkgver=0.7.1
pkgrel=1
pkgdesc="Desktop notification library"
arch=(i686 x86_64)
url="http://www.galago-project.org/"
license=('LGPL')
depends=('dbus-glib>=0.92' 'gtk3')
conflicts=('libnotify')
provides=('libnotify=0.7.0')
options=('!libtool')
source=(http://ftp.gnome.org/pub/GNOME/sources/libnotify/0.7/libnotify-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd "${srcdir}/libnotify-${pkgver}"
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd "${srcdir}/libnotify-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
