# Contributor: Martin Stolpe <martinstolpe [at] gmail ... com>
_short=explorer
pkgname=bzr-${_short}
_majorver=1.1
pkgver=${_majorver}.2
pkgrel=3
pkgdesc="A desktop application for using the Bazaar Version Control System"
arch=('i686' 'x86_64')
url="https://launchpad.net/bzr-explorer/"
license=('GPL')
depends=("python2" "bzr" "qbzr>=0.19.2-2")
source=(http://launchpad.net/bzr-explorer/${_majorver}/$pkgver/+download/$pkgname-$pkgver.tar.gz)

build() {
  cd "${startdir}/src/explorer/"
  python2 setup.py install --prefix'=/usr' --root="${startdir}/pkg"

  install -D -m 644 ${srcdir}/${_short}/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
  sed -i 's/#Icon/Icon/g' ${pkgdir}/usr/share/applications/${pkgname}.desktop

  install -dm755 ${pkgdir}/usr/share/icons/hicolor/16x16/apps/
  install -m644 ${srcdir}/${_short}/data/bzr-16.png ${pkgdir}/usr/share/icons/hicolor/16x16/apps/bzr.png
  install -dm755 ${pkgdir}/usr/share/icons/hicolor/32x32/apps/
  install -m644 ${srcdir}/${_short}/data/bzr-32.png ${pkgdir}/usr/share/icons/hicolor/32x32/apps/bzr.png
  install -dm755 ${pkgdir}/usr/share/icons/hicolor/48x48/apps/
  install -m644 ${srcdir}/${_short}/data/bzr-48.png ${pkgdir}/usr/share/icons/hicolor/48x48/apps/bzr.png
}
md5sums=('d23eb88d1a72b705fdafc4e462447092')
