# Maintainer: Mark Pustjens <pustjens@dds.nl
# Contributer: PirateJonno <j@skurvy.no-ip.org>

pkgname=jockey
pkgver=0.5.8
pkgrel=2
pkgdesc="Jockey provides an user interface and desktop integration for installation and upgrade of third-party drivers."
url="http://launchpad.net/jockey"
arch=('any')
license=('GPL')
source=("http://launchpad.net/jockey/trunk/0.5.8/+download/${pkgname}-${pkgver}.tar.gz")
depends=('dbus-python' 'pyxdg' 'x-kit' 'polkit' 'packagekit' 'pygtk' 'python-notify')
makedepends=('python-distutils-extra')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}/"
	./setup.py build --build-base ${srcdir}/build/ || return 1
}

package () {
	cd "${srcdir}/${pkgname}-${pkgver}/"
	./setup.py install --prefix=/usr --root=${pkgdir} \
		--install-purelib=/usr/lib/python2.6/site-packages/ \
		--no-compile -O0
}

md5sums=('07af79169aa9f77458c5618b4f8e47e6')
