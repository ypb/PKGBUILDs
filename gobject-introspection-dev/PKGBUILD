# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on [testing]'s gobject-introspection

_pkgbase=gobject-introspection
pkgname=gobject-introspection-dev
pkgver=0.10.1
_majorver=(`echo ${pkgver} | egrep -o '[0-9]+\.[0-9]*+'`)
pkgrel=1
pkgdesc="Introspection system for GObject-based libraries - Bleeding edge version"
url="http://live.gnome.org/GObjectInstrospection"
arch=('x86_64' 'i686')
license=('LGPL' 'GPL')
depends=('libffi>=3.0.9' 'glib2>=2.26.0' 'python2>=2.5')
makedepends=('cairo')
conflicts=('gir-repository' 'gobject-introspection')
replaces=('gir-repository')
provides=("gobject-introspection=${pkgver}")
options=('!libtool')
source=(http://ftp.gnome.org/pub/GNOME/sources/${_pkgbase}/${_majorver}/${_pkgbase}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd ${_pkgbase}-${pkgver}
  export PYTHON="/usr/bin/python2"
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install

  sed -i "s|#!/usr/bin/env python|#!/usr/bin/env python2|" \
  "${pkgdir}"/usr/lib/gobject-introspection/giscanner/*.py
}