pkgname="libgit2-git"
pkgver=20110131
pkgrel=1
pkgdesc="Portable, re-entrant C API library of core Git methods."
arch=('i686')
# https://github.com/libgit2/libgit2
url="http://libgit2.github.com/api.html"
# http://libgit2.github.com/libgit2/modules.html
depends=('zlib')
# waf needs python or s/python2/cmake/
makedepends=('git' 'python2' 'zlib')
provides=('libgit2')
conflicts=('libgit2')
license=('custom: GPL2')
groups=('ypb')

_pybin=$(which python2)

_rooturn="/github.com/libgit2/libgit2.git"
#_gitroot="https:/${_rooturn}"
_gitroot="git:/${_rooturn}"
_gitname="libgit2"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  # BUILD HERE

  ${_pybin} ./waf configure --prefix=/usr || return 1
  ${_pybin} ./waf || return 1
}

package() {
  cd "$srcdir/$_gitname-build"

  # INSTALL THERE

  ${_pybin} ./waf install --destdir="${pkgdir}/" || return 1
}

